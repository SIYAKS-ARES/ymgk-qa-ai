# ============================================
# LGS RAG with LangChain - Environment Variables
# ============================================
# Bu dosyayi .env olarak kopyalayin ve degerleri doldurun
# cp env.example .env

# ============================================
# LLM API Keys (En az biri gerekli)
# ============================================

# Gemini API Key (Tercih edilen - bu projede kullanilan)
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API Key (Opsiyonel - alternatif LLM icin)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (Opsiyonel - Claude icin)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ============================================
# LLM Configuration
# ============================================

# LLM Provider: gemini | openai | anthropic
LLM_PROVIDER=gemini

# Model Name (Gemini icin ornek: gemini-2.5-flash)
LLM_MODEL=gemini-2.5-flash

# Temperature (0.0 - 1.0)
LLM_TEMPERATURE=0.7

# Max Tokens (tam LGS sorusu + cozum icin)
LLM_MAX_TOKENS=2000

# ============================================
# Embedding Configuration
# ============================================

# Embedding Model
# OpenAI: text-embedding-ada-002, text-embedding-3-small
# HuggingFace: emrecan/bert-base-turkish-cased-mean-nli-stsb-tr
EMBEDDING_MODEL=text-embedding-3-small

# Embedding Provider: openai | huggingface
EMBEDDING_PROVIDER=huggingface

# ============================================
# Vector Store Configuration
# ============================================

# Vector Store Type: faiss | chroma
VECTOR_STORE_TYPE=faiss

# Vector Store Path
VECTOR_STORE_PATH=./vectorstore

# ============================================
# Data Paths
# ============================================

# Model Configs (Model katmanindan)
CONFIGS_PATH=../lgs-model/outputs/configs.json

# Soru Dataset (RAG retrieval icin)
QUESTIONS_CSV_PATH=../lgs-model/data/processed/dataset_ocr_li.csv

# Generated Questions Output
GENERATED_QUESTIONS_PATH=./data/generated_questions

# ============================================
# RAG Configuration
# ============================================

# Retrieval Top-K
RETRIEVAL_TOP_K=5

# Similarity Threshold
SIMILARITY_THRESHOLD=0.7

# Max Generation Attempts
MAX_GENERATION_ATTEMPTS=3

# ============================================
# API Configuration
# ============================================

# API Host
API_HOST=0.0.0.0

# API Port
API_PORT=8000

# API Workers
API_WORKERS=4

# Debug Mode
DEBUG=false

# ============================================
# Logging Configuration
# ============================================

# Log Level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Log Format: json | text
LOG_FORMAT=json

# Log File Path (opsiyonel)
# LOG_FILE_PATH=./logs/app.log

# ============================================
# Manim Configuration (Gorsel Uretim)
# ============================================

# Manim Output Directory
MANIM_OUTPUT_DIR=./generated_visuals

# Manim Quality: l (low) | m (medium) | h (high)
MANIM_QUALITY=l

# ============================================
# Rate Limiting
# ============================================

# Requests per minute
RATE_LIMIT_RPM=60

# Tokens per minute
RATE_LIMIT_TPM=90000

